{
  "buildCommand": "npm run build",
  "functions": {
    "api/index.js": {
      "runtime": "nodejs20.x"
    }
  },
  "routes": [
    {
      "src": "/assets/(.*)",
      "dest": "/dist/public/assets/$1"
    },
    {
      "src": "/(.*\\..*)",
      "dest": "/dist/public/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/api"
    }
  ]
}

